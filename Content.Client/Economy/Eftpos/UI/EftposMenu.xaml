<DefaultWindow xmlns="https://spacestation14.io"
    MinSize="365 140"
    SetSize="365 140">
    <BoxContainer Orientation="Vertical" SeparationOverride="4">
        <BoxContainer Orientation="Horizontal">
            <Label
                Name="ValueLabel"
                Access="Public"
                Text="Value: "/>
            <LineEdit
                Name="ValueLineEdit"
                PlaceHolder="0"
                MinWidth="60"
                Access="Public"/>
            <Button
                Name="ValueButton"
                Access="Public"/>
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label
                Name="LinkedAccountLabel"
                Access="Public"
                Text="Linked account: "/>
            <LineEdit
                Name="LinkedAccountLineEdit"
                PlaceHolder="No linked account"
                HorizontalExpand="True"
                Access="Public"/>
            <Button
                Name="LinkedAccountButton"
                Access="Public"/>
        </BoxContainer>
        <Button
            Name="SwipeCardButton"
            Access="Public"
            HorizontalAlignment="Center"
            Text="Swipe your card to finish this transaction."/>
        <Button
            Name="LockButton"
            Access="Public"
            HorizontalAlignment="Center"
            Text="Lock EFTPOS."/>
    </BoxContainer>
</DefaultWindow>
