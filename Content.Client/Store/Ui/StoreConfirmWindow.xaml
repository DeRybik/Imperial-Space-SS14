<DefaultWindow
    xmlns="https://spacestation14.io"
    Title="{Loc 'store-ui-confirm-title'}"
    SetSize="522 150"
    MinSize="522 150">
    <BoxContainer Orientation="Vertical" VerticalExpand="True">
        <RichTextLabel Name="ConfirmText" />
        <Button
            Name="ConfirmButton"
            Access="Public"
            Text="{Loc 'store-ui-confirm-button-text'}"
            HorizontalAlignment="Center"
            Margin="0 4 0 0"/>
    </BoxContainer>
</DefaultWindow>
